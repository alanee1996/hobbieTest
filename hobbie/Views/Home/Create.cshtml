<h1>User Create</h1>

<div class="container mt-3">
    <form id="createForm">
        <div class="mb-3">
            <label for="id" class="form-label">ID</label>
            <input type="text" pattern="^[0-9]{1,9}$" required title="Id cannot be null and it must be in numeric format" class="form-control" id="id">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" required>
        </div>
        <br />
        <hr class="mt-3" />

        <section class="p-4">
            <h3>Hobbies Section</h3>
            <div class="d-flex flex-row-reverse">
                <button id="btn-add-hobbie" type="button" class="btn btn-secondary">Add Hobbie</button>
            </div>
            <div id="hb-container" class="mt-2">
                <div id="template" class="mb-3 hobbie d-none">
                    <label class="form-label">Hobbie</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Enter your hobbie">
                        <div class="input-group-append">
                            <button class="btn btn-outline-danger btn-discard" type="button" onclick="createFunction.discardHobbie(this)">Discard</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <input type="submit" id="btn-create" class="btn btn-primary" value="Create" />
    </form>
</div>

@section scripts{
    <script type="text/javascript" src="~/js/create.js"></script>
}

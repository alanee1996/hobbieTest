@model UserViewModel

<h1>User Edit</h1>

<div class="container mt-3">
    @if (Model == null)
    {
        <h2 class="text-danger">User not found</h2>
    }
    else
    {
        <form id="editForm">
            <div class="mb-3">
                <label for="id" class="form-label">ID</label>
                <input type="text" class="form-control" id="id" value="@Model.id" readonly>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" value="@Model.name" required>
            </div>
            <div class="d-flex flex-row-reverse">
                <input type="submit" id="btn-update" class="btn btn-primary" value="Update" />
            </div>
            <br />
            <hr class="mt-3" />

            <section class="p-4">
                <h3>Hobbies Section</h3>
                <div class="d-flex flex-row-reverse">
                    <button id="btn-add-hobbie" type="button" class="btn btn-secondary">Add Hobbie</button>
                </div>
                <div id="hb-container" class="mt-2">
                    <div id="template" class="mb-3 hobbie d-none" target="">
                        <label class="form-label">Hobbie</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Enter your hobbie">
                            <div class="input-group-append">
                                <button class="btn btn-outline-success btn-save" type="button" onclick="editFunction.saveHobbie(this)">Save</button>
                                <button class="btn btn-outline-danger btn-delete" type="button" onclick="editFunction.deleteHobbie(this)">Remove</button>
                            </div>
                        </div>
                    </div>
                    @foreach (var hobbie in Model.hobbies)
                    {
                        <div class="mb-3 hobbie" target="@hobbie.id">
                            <label class="form-label">Hobbie</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter your hobbie" value="@hobbie.hobbie" required>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-success btn-save" type="button" onclick="editFunction.saveHobbie(this)">Save</button>
                                    <button class="btn btn-outline-danger btn-delete" type="button" onclick="editFunction.deleteHobbie(this)">Remove</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>

        </form>
    }
</div>

@section scripts {
    <script type="text/javascript" src="~/js/edit.js"></script>
}